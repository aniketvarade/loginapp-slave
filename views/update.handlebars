<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55 m-t-55">
				<form class="login100-form" name="update" method="post" action="/update">
					<span class="login100-form-title p-b-32">
						Update Details
					</span>

					<span class="txt1 p-b-11">
						Car Model
					</span>
					<div class="wrap-input100 m-b-12">
						<!--<input class="input100" id="name" type="text" name="name" required>-->
                        <select name="selectpicker" class="input100">
							<option value="select" name="Select Model">{{model}}</option>
                            <option value="Honda" name="Honda">Honda</option>
                            <option value="Maruti" name="Maruti">Maruti</option>                            
                        </select>
						<span class="focus-input100"></span>
					</div>
					<label id="name1"></label>	

					<span class="txt1 p-b-11">
						Number of Major Accidents
					</span>
					<div class="wrap-input100 m-b-12">
						<input class="input100" type="number" name="accident" value="{{accident}}">
						<span class="focus-input100"></span>
					</div>
					<label id="accident"></label>			

					<span class="txt1 p-b-11">
						Current Tire kms
					</span>
					<div class="wrap-input100 m-b-12">
						<input class="input100" type="number" name="tire" value="{{tire}}">
						<span class="focus-input100"></span>
					</div>
					<label id="tire"></label>		

                    <span class="txt1 p-b-11">
						Current Coolant kms
					</span>
					<div class="wrap-input100 m-b-12">
						<input class="input100" type="number" name="coolant" value="{{coolant}}">
						<span class="focus-input100"></span>
					</div>
					<label id="coolant"></label>		

                    <span class="txt1 p-b-11">
						Current Oil kms
					</span>
					<div class="wrap-input100 m-b-12">
						<input class="input100" type="number" name="oil" value="{{oil}}">
						<span class="focus-input100"></span>
					</div>
					<label id="oil"></label>		
					
					<div class="flex-sb-m w-full p-b-48">
						<div class="contact100-form-checkbox">
							<!--input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me"-->
							<!--label class="label-checkbox100" for="ckb1"-->							
							</label>
						</div>

						<div>
							<!--a href="#" class="txt3">
								Forgot Password?
							</a-->
						</div>
					</div>

					<div class="container-login100-form-btn">
						<!--&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
						<input class="login100-form-btn" type="submit" name="update" value="Update"></input>						
					</div>

				</form>
			</div>
		</div>
	</div>